<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:weightSum="6"
    tools:context=".SplashScreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom|center"
        android:layout_weight="3">
        <ImageView
            android:layout_width="215dp"
            android:layout_height="204dp"
            android:layout_gravity="center"
            android:src="@drawable/under_mail_2_tqip" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1.5">
        <TextView
            android:layout_width="wrap_content"
            android:text="Accept a Job"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_regular"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Driver Lagbe established fact that a reader be distracted by the readable content of a page\nwhen looking at its layout"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_regular"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1.5">
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/skipBtnId"
            android:text="Skip"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:clickable="true"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:fontFamily="@font/raleway_regular"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>