<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Driver Search"
        android:gravity="center"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginTop="30dp"

        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

    <EditText
        android:layout_width="276dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/sign_up_edit_text_back"
        android:hint="Search By Location"
        android:drawableRight="@drawable/search"
        android:textAlignment="center"
        android:gravity="center" />

        <EditText
            android:layout_width="276dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/sign_up_edit_text_back"
            android:hint="Experience"
            android:drawableRight="@drawable/dropdown"
            android:textAlignment="center"
            android:gravity="center" />



        <EditText
            android:layout_width="276dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/sign_up_edit_text_back"
            android:hint="Type of Vehicle"
            android:drawableRight="@drawable/dropdown"
            android:textAlignment="center"
            android:gravity="center" />


        <EditText
            android:layout_width="276dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/sign_up_edit_text_back"
            android:hint="Gear type"
            android:drawableRight="@drawable/dropdown"
            android:textAlignment="center"
            android:gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/asDriverBtnId"
            android:text="Search"
            android:textSize="17sp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:background="@drawable/sign_up_page_btn_shape"
            android:fontFamily="@font/raleway_bold"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"




            />



</LinearLayout>


</LinearLayout>