<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="6"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Basic.Earn_money">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom|center"
        android:layout_weight="3">
        <ImageView
            android:layout_width="215dp"
            android:layout_height="204dp"
            android:layout_gravity="center"
            android:src="@drawable/under_walet_aym5" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1.5">
        <TextView
            android:layout_width="wrap_content"
            android:text="Earn Money"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_regular"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Driver Lagbe established fact that a reader be distracted by the readable content of a page\nwhen looking at its layout"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_regular"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1.5">
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/getStartBtnId"
            android:text="GET STARTED"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:background="@drawable/btn_shape"
            android:fontFamily="@font/raleway_bold"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>