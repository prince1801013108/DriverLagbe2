<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_height="match_parent">
	<com.google.android.material.appbar.AppBarLayout android:id="@+id/appbarId" android:background="#0574b0" android:layout_width="match_parent" android:layout_height="50dp">
		<androidx.appcompat.widget.Toolbar android:id="@+id/toolbarId" android:background="#92d364" android:layout_width="match_parent" android:layout_height="wrap_content">
			<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
				<TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#ffffff" android:id="@+id/closeId" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Close" android:layout_alignParentLeft="true" />
				<TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#ffffff" android:id="@+id/updateId" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="Update Profile" android:layout_alignParentRight="true" />
			</RelativeLayout>
		</androidx.appcompat.widget.Toolbar>
	</com.google.android.material.appbar.AppBarLayout>

	<ImageView
		android:id="@+id/profileImageId"
		android:layout_width="150dp"
		android:layout_height="150dp"
		android:layout_below="@+id/appbarId"
		android:layout_marginTop="5dp"
		android:layout_gravity="center"
		android:src="@drawable/robot_profile"
		/>

	<TextView android:textSize="20dp"
		android:textStyle="bold"
		android:textColor="#ffffff"
		android:id="@+id/changeProfileId"
		android:background="#92d364"
		android:padding="5dp"
		android:layout_gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:text="Change Profile Picture"
		android:layout_below="@id/appbarId"
		android:layout_centerHorizontal="true" />

	<EditText android:textSize="17dp"
		android:textStyle="bold"
		android:textColor="#5ce5"
		android:id="@+id/phone_id"
		android:background="@drawable/icon_background"
		android:padding="10dp"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_marginLeft="15dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="15dp"
		android:hint="Phone Number"
		android:drawableLeft="@drawable/number_icon"
		android:drawablePadding="50dp"
		android:layout_below="@id/changeProfileId"
		android:inputType="number" />
	<EditText android:textSize="17dp"
		android:textStyle="bold"
		android:textColor="#5ce5"
		android:id="@+id/name_id"
		android:background="@drawable/icon_background"
		android:padding="10dp"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_marginLeft="15dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="15dp"
		android:hint="Full Name"
		android:drawableLeft="@drawable/name_icon"
		android:drawablePadding="50dp"
		android:layout_below="@id/phone_id"
		android:inputType="text" />
	<EditText android:textSize="17dp"
		android:textStyle="bold"
		android:textColor="#5ce5"
		android:id="@+id/address_id"
		android:background="@drawable/icon_background"
		android:padding="10dp"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_marginLeft="15dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="15dp"
		android:hint="Address"
		android:drawableLeft="@drawable/addrss_icon"
		android:drawablePadding="50dp"
		android:layout_below="@id/changeProfileId"
		android:inputType="text" />



</LinearLayout>
