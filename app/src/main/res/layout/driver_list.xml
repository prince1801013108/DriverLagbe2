<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/new_request_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="25sp"
                android:text="Driver List"
                android:background="#FF8A65"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:weightSum="3"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:id="@+id/img_tube_bending"
                android:src="@drawable/round_shape"
                />
        </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of the Driver"
                android:fontFamily="@font/raleway_bold"
                android:textSize="18dp"

                />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year Of Experience"
                    android:fontFamily="@font/raleway_regular"
                android:textSize="13dp"

                />


                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Type"
                    android:fontFamily="@font/raleway_regular"
                android:textSize="11dp"
                    android:textColor="#DF0851"

                />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto and Manual"
                    android:gravity="bottom"
                    android:textColor="@color/green"
                    android:layout_gravity="bottom"
                    android:textSize="11dp"

                   />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:id="@+id/listViewId"
        android:layout_height="wrap_content"/>






</LinearLayout>